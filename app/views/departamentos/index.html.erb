<p id="notice"><%= notice %></p>

<h1>Lista de Departamentos</h1>

<table>
  <thead>
    <tr>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departamentos.each do |departamento| %>
      <tr>
        <td><%= departamento.codigo %></td>
        <td><%= departamento.nombre %></td>
        <td><%= departamento.descripcion %></td>
        <td><%= link_to 'Mostrar', departamento %></td>
        <td><%= link_to 'Editar', edit_departamento_path(departamento) %></td>
        <td><%= link_to 'Eliminar', departamento, method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar el Departamento?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

