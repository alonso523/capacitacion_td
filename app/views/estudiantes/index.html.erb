<p id="notice"><%= notice %></p>

<h1>Lista de Estudiantes</h1>

<table>
  <thead>
    <tr>
      <th>Departamento</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estudiantes.each do |estudiante| %>
      <tr>
        <td><%= Departamento.find(estudiante.departamento_id).nombre %></td>
        <td><%= estudiante.nombre %></td>
        <td><%= estudiante.apellido %></td>
        <td><%= estudiante.observacion %></td>
        <td><%= link_to 'Mostrar', estudiante %></td>
        <td><%= link_to 'Editar', edit_estudiante_path(estudiante) %></td>
        <td><%= link_to 'Eliminar', estudiante, method: :delete, data: { confirm: 'EstÃ¡ seguro que lo desea eliminar?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

