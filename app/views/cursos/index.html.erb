<p id="notice"><%= notice %></p>

<h1>Lista de Cursos</h1>

<table>
  <thead>
    <tr>
      <th>Modalidad</th>
      <th>Codigo</th>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cursos.each do |curso| %>
      <tr>
        <td><%= curso.modalidad_id %></td>
        <td><%= curso.codigo %></td>
        <td><%= curso.nombre %></td>
        <td><%= curso.descripcion %></td>
        <td><%= link_to 'Mostrar', curso %></td>
        <td><%= link_to 'Editar', edit_curso_path(curso) %></td>
        <td><%= link_to 'Eliminar', curso, method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar el curso?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

