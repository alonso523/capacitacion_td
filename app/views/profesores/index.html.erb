<p id="notice"><%= notice %></p>

<h1>Lista de profesores</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Observacion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profesores.each do |profesore| %>
      <tr>
        <td><%= profesore.nombre %></td>
        <td><%= profesore.apellido %></td>
        <td><%= profesore.observacion %></td>
        <td><%= link_to 'Mostrar', profesore %></td>
        <td><%= link_to 'Editar', edit_profesore_path(profesore) %></td>
        <td><%= link_to 'Eliminar', profesore, method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar el elemento?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

