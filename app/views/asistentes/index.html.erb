<p id="notice"><%= notice %></p>

<h1>Lista de Asistentes</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Observación</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asistentes.each do |asistente| %>
      <tr>
        <td><%= asistente.nombre %></td>
        <td><%= asistente.apellido %></td>
        <td><%= asistente.observacion %></td>
        <td><%= link_to 'Mostrar', asistente %></td>
        <td><%= link_to 'Editar', edit_asistente_path(asistente) %></td>
        <td><%= link_to 'Eliminar', asistente, method: :delete, data: { confirm: 'Está seguro que desea eliminar el Asistente?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Asistente', new_asistente_path %>
<%= link_to 'Inicio', root_path %>
